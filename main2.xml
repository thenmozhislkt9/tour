<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:background="#F781F3" android:orientation="vertical">
    <EditText android:hint="Username" 
    android:id="@+id/editText1"
    android:focusable="true"
     android:layout_height="wrap_content"
      android:layout_width="fill_parent"></EditText>
    <EditText android:hint="Password"
     android:id="@+id/editText2"
      android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       ></EditText>
    <EditText android:hint="Home City" android:id="@+id/editText3"
        android:focusable="true"
     android:layout_height="wrap_content" android:layout_width="match_parent"></EditText>
    <RelativeLayout android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="wrap_content"></RelativeLayout>
    <Button android:id="@+id/button1" android:textStyle="bold" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="signin"></Button>
    <Button android:text="Login"
    android:textStyle="bold" android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
</LinearLayout>
